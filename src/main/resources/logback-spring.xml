<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- ===================== -->
    <!--        PROPERTIES     -->
    <!-- ===================== -->
    <property name="CONSOLE_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %magenta([%thread]) %highlight([%-3level]) %logger{5} [%X{reqId}] %msg %n"/>

    <property name="ROLLING_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %logger{5} [%X{reqId}] %msg %n"/>

    <property name="FILE_NAME" value="./logs/tama.log"/>
    <property name="LOG_NAME_PATTERN" value="./logs/tama-%d{yyyy-MM-dd}.%i.log"/>

    <property name="MAX_FILE_SIZE" value="10MB"/>
    <property name="TOTAL_SIZE" value="1000MB"/>
    <property name="MAX_HISTORY" value="90"/>

    <!-- ===================== -->
    <!--        APPENDERS      -->
    <!-- ===================== -->

    <!-- 콘솔 출력 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- 파일 롤링 -->
    <appender name="ROLLING_LOG_FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${FILE_NAME}</file>

        <encoder>
            <pattern>${ROLLING_PATTERN}</pattern>
        </encoder>

        <rollingPolicy
                class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_NAME_PATTERN}</fileNamePattern>
            <maxHistory>${MAX_HISTORY}</maxHistory>
            <maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
            <totalSizeCap>${TOTAL_SIZE}</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ===================== -->
    <!--        LOCAL PROFILE  -->
    <!-- ===================== -->
    <springProfile name="local">
        <!-- 콘솔만 -->
        <root level="info">
            <appender-ref ref="STDOUT"/>
        </root>

        <logger name="org.springframework.jdbc.core.JdbcTemplate" level="DEBUG"/>
    </springProfile>

    <!-- ===================== -->
    <!--     NON-LOCAL PROFILE -->
    <!-- ===================== -->
    <springProfile name="!local">
        <!-- 콘솔 + 파일 -->
        <root level="info">
            <appender-ref ref="STDOUT"/>
            <!--aws beanstalk는 이미 s3에 로그 보관하니 파일로 안남겨도 됨 -->
            <!--<appender-ref ref="ROLLING_LOG_FILE"/>-->
        </root>

        <!-- 불필요한 SQL 로그 차단 -->
        <logger name="org.springframework.jdbc.core.JdbcTemplate" level="ERROR"/>

        <logger name="org.hibernate.SQL" level="ERROR"/>
    </springProfile>

</configuration>